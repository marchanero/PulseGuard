generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id                 Int      @id @default(autoincrement())
  name               String
  type               String   @default("HTTP")
  url                String
  host               String?  // Para PING, DNS, TCP, SSL
  port               Int?     // Para TCP
  description        String?
  status             String   @default("unknown")
  responseTime       Int?
  uptime             Float    @default(100)
  lastChecked        DateTime?
  checkInterval      Int      @default(60) // Intervalo en segundos (por defecto 60s = 1 minuto)
  isActive           Boolean  @default(true) // Si está activo el monitoreo automático
  isDeleted          Boolean  @default(false) // Soft delete - servicio archivado
  deletedAt          DateTime? // Fecha de eliminación
  totalMonitoredTime Int      @default(0) // Tiempo total monitoreado en ms
  onlineTime         Int      @default(0) // Tiempo online acumulado en ms
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  logs               ServiceLog[]
  metrics            PerformanceMetric[]
}

model ServiceLog {
  id           Int      @id @default(autoincrement())
  serviceId    Int
  service      Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  timestamp    DateTime @default(now())
  status       String
  responseTime Int?
  message      String?
}

model PerformanceMetric {
  id           Int      @id @default(autoincrement())
  serviceId    Int
  service      Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  timestamp    DateTime @default(now())
  responseTime Int      // Tiempo de respuesta en ms
  status       String   // online, offline, slow
  uptime       Float    // Uptime acumulado hasta este punto
  
  @@index([serviceId, timestamp])
}
